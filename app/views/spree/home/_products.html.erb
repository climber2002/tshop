<% if products.any? %>

  <div class="container main-container"> 
    
    <!-- Main component call to action -->
    
    <div class="morePost row featuredPostContainer style2 globalPaddingTop " >
      <h3 class="section-title style2 text-center"><span>FEATURES PRODUCT</span></h3>
      <div class="container">
        <div class="row xsResponse">
          
          <% products.each do |product| %>
            <div class="item col-lg-3 col-md-3 col-sm-4 col-xs-6">
              <div class="product"> 
                <% url = product_url(product, :taxon_id => @taxon.try(:id)) %>
                <div class="image">
                  <%= link_to product_image(product, :itemprop => "image"), url, :itemprop => 'url', class: 'img-responsive' %>
                </div>
                <div class="description">
                  <h4><%= link_to truncate(product.name, :length => 50), url -%></h4>
                  <p><%= truncate(product.description, :length => 200) -%></p>
                  <div class="price"><span><%= display_price(product) %></span></div>
                  <div class="action-control"> <a class="btn btn-primary"> <span class="add2cart"><i class="fa fa-shopping-cart"></i> Add to cart </span> </a> </div>
                </div>
              </div>
            </div>          
          <% end %>

        </div>
      </div>
  </div>
  <!--main-container-->
<% end %>